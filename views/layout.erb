<!DOCTYPE html>
<html>
  <head>
    <title>Tweetski</title>
  </head>

  <body>
    <% if current_user %>
      Welcome, <%= current_user.email %>
    <% end %>
    <form method='post' action='/sessions'>
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="Sign out">
    </form>
    <% if flash[:error] %>
      <%= flash[:error] %>
    <% end %>
    <%= yield %>
  </body>
</html>